<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_user_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_start_item_user_list"
        android:layout_marginTop="@dimen/margin_top_item_user_list"
        android:layout_marginBottom="@dimen/margin_top_item_user_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_item_user_list"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_user_pic"
        app:layout_constraintStart_toEndOf="@+id/imageview_user_pic"
        app:layout_constraintTop_toTopOf="@+id/imageview_user_pic"
        tools:text="Sample name" />
</androidx.constraintlayout.widget.ConstraintLayout>